<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CameraXFaceDetection" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
    </style>

    <style name="simpleButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:textColor">#002256</item>
        <item name="android:background">@drawable/ic_blue_button_round_background</item>
    </style>

    <style name="AppToolbarTheme">
        <item name="titleTextColor">@color/black</item>
        <item name="subtitleTextColor">@color/black</item>
        <item name="background">@color/white</item>
        <item name="fontFamily">@font/poppinsbold</item>
    </style>

    <style name="EditTextLayoutStyle">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/poppinsregular</item>
        <item name="android:filterTouchesWhenObscured">false</item>
    </style>

    <style name="InputTextLayoutStyle">
        <item name="android:textColorHint">@color/grey</item>
        <item name="boxStrokeColor">@color/grey</item>
        <item name="hintTextColor">@color/grey5</item>
        <item name="startIconTint">@color/grey5</item>
        <item name="boxStrokeErrorColor">@color/grey2</item>
        <item name="android:filterTouchesWhenObscured">true</item>
    </style>
</resources>